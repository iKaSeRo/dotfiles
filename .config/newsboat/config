color listnormal blue default
color listfocus black yellow standout bold
color listnormal_unread magenta default
color listfocus_unread yellow default bold
color info red black bold
color article cyan default

macro , open-in-browser
macro v set browser "setsid mpv"; open-in-browser
macro a set browser "$TERMINAL -e mpv --no-video" ; open-in-browser
macro c set browser "pipe-viewer --comments=%u" ; open-in-browser
macro r set browser "rtv" ; open-in-browser

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
